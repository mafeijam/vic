.ripple
  display inline-block
  overflow hidden
  position relative
  user-select none
  &:hover
    cursor pointer
  &-circle
    display block
    position absolute
    border-radius 50%
    transform scale(0)
  &-effect
    animation ripple-effect 1s ease-out

@keyframes ripple-effect
  100%
    opacity 0
    transform scale(3)
